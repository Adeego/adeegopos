{
  "name": "claude",
  "description": "POS App",
  "version": "1.1.1",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run copy-static",
    "cleanup": "sudo rm -rf out dist && sudo rm -rf node_modules/.cache",
    "copy-static": "cp -r ./public ./out/",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron .",
    "electron-dev": "concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev -p 3333\" \"electron .\"",
    "electron-builder": "electron-builder",
    "pack": "next build && electron-builder",
    "dist": "next build && electron-builder",
    "publish": "next build && electron-builder --publish always",
    "pack:publish": "next build && electron-builder --publish always"
  },
  "build": {
    "appId": "com.adeegoltd.claude",
    "productName": "CLAUDE",
    "files": [
      "electron/**/*",
      "out/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [{
      "provider": "github",
      "owner": "Adeego",
      "repo": "adeegopos"
    }]
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@tanstack/react-table": "^8.19.3",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "electron-serve": "^2.0.0",
    "electron-updater": "^6.1.8",
    "fuse.js": "^7.0.0",
    "is-online": "^11.0.0",
    "lucide-react": "^0.424.0",
    "next": "14.2.5",
    "pouchdb": "^9.0.0",
    "pouchdb-find": "^9.0.0",
    "pouchdb-quick-search": "^1.3.0",
    "react": "^18",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18",
    "react-hook-form": "^7.52.2",
    "react-router-dom": "^6.26.0",
    "recharts": "^2.12.7",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "wait-on": "^7.2.0"
  },
  "author": {
    "name": "Abdiaziz Abdullahi",
    "email": "adeegoltd@gmail.com"
  }
}
